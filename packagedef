#Использовать 1commands

ПутьКСценариюПараметров = ОбъединитьПути(ТекущийСценарий().Каталог, "src", "Модули", "ПараметрыСистемы.os");
ПараметрыСистемы_ЛокальнаяВерсия = ЗагрузитьСценарий(ПутьКСценариюПараметров);

ИмяПродукта = НРег(ПараметрыСистемы_ЛокальнаяВерсия.ИмяПриложения());
ВерсияПродукта = ПараметрыСистемы_ЛокальнаяВерсия.Версия();

Описание.Имя(ИмяПродукта)
	.Версия(ВерсияПродукта)
	.Автор("Barilko Vitaly")
	.АдресАвтора("support@softonit.ru")

	.Описание("Программная среда CI/CD для платформы 1С и не только. Позволяет выполнять сборку, доставку, тестирование ПО и многое из того, что может понадобиться в DevOps.")

	.ВерсияСреды("1.8.3")

	.ВключитьФайл("src")
	.ВключитьФайл("packagedef")
	.ВключитьФайл("tests")
	.ВключитьФайл("README.md")
	.ВключитьФайл("LICENSE")
	.ВключитьФайл("docs/COMMAND.md")

	.ЗависитОт("asserts")
	.ЗависитОт("json")
	.ЗависитОт("fs")
	.ЗависитОт("logos")
	.ЗависитОт("cli")
	.ЗависитОт("tempfiles")
	.ЗависитОт("v8runner")
	.ЗависитОт("v8find")
	.ЗависитОт("1connector")	
	.ЗависитОт("1commands")	

	.РазработкаЗависитОт("1testrunner")
	.РазработкаЗависитОт("asserts")
	.РазработкаЗависитОт("coverage")
	.РазработкаЗависитОт("1commands")
	.РазработкаЗависитОт("fs")	

	.ИсполняемыйФайл("src/actions.os", "actions")
	.ИсполняемыйФайл("src/actions.os", "actions1c")